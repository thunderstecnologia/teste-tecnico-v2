{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,50823;Database=ThundersTechTestDb;User Id=sa;Password=Mypassword1570!;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Features": {
    "UseMessageBroker": true,
    "UseEntityFramework": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "OpenTelemetry": {
    "Tracing": {
      "AspNetCoreInstrumentation": true,
      "HttpClientInstrumentation": true,
      "Exporter": "Console"
    }
  },
  "JwtSettings": {
    "Secret": "SuperStrongSecretKeyWithAtLeast32Characters",
    "Issuer": "Thunders.TechTest",
    "Audience": "Thunders.TechTest.Client",
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true
  },
  "Swagger": {
    "Title": "Thunders TechTest API",
    "Version": "v1",
    "Description": "API para testes t√©cnicos",
    "RoutePrefix": "swagger"
  },
  "RabbitMQ": {
    "Host": "amqp://guest:guest@rabbitmq",
    "Queue": "Thunders.TechTest"
  }
}