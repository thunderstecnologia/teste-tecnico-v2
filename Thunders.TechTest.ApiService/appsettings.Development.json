{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,50823;Database=ThundersTechTestDb;User Id=sa;Password=Mypassword1570!;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Features": {
    "UseMessageBroker": false,
    "UseEntityFramework": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "OpenTelemetry": {
    "Tracing": {
      "AspNetCoreInstrumentation": true,
      "HttpClientInstrumentation": true,
      "Exporter": "Console"
    },
    "JwtSettings": {
      "Secret": "SuperStrongSecretKeyWithAtLeast32Characters",
      "Issuer": "Thunders.TechTest",
      "Audience": "Thunders.TechTest.Client"
    }
  }
}